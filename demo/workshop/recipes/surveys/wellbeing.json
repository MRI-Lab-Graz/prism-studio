{
  "RecipeVersion": "1.0",
  "Kind": "survey",
  "Survey": {
    "Name": "Well-Being Short Scale",
    "TaskName": "wellbeing"
  },
  "Transforms": {
    "Invert": {
      "Scale": {"min": 1, "max": 5},
      "Items": ["WB03"]
    }
  },
  "Scores": [
    {
      "Name": "WB_total",
      "Description": "Total Well-Being Score (sum of all items, WB03 reverse-coded)",
      "Method": "sum",
      "Items": ["WB01", "WB02", "WB03", "WB04", "WB05"],
      "Missing": "ignore",
      "Range": {"min": 5, "max": 25},
      "Interpretation": {
        "5-10": "Low well-being",
        "11-17": "Moderate well-being",
        "18-25": "High well-being"
      }
    },
    {
      "Name": "WB_positive",
      "Description": "Positive Affect Subscale (happiness, energy)",
      "Method": "mean",
      "Items": ["WB02", "WB04"],
      "Missing": "ignore",
      "Range": {"min": 1, "max": 5}
    },
    {
      "Name": "WB_satisfaction",
      "Description": "Life Satisfaction Subscale (life satisfaction, sleep)",
      "Method": "mean",
      "Items": ["WB01", "WB05"],
      "Missing": "ignore",
      "Range": {"min": 1, "max": 5}
    },
    {
      "Name": "WB_stress_inv",
      "Description": "Stress Level (inverted, higher = less stress)",
      "Method": "sum",
      "Items": ["WB03"],
      "Missing": "ignore",
      "Note": "WB03 is reverse-coded so higher scores indicate less stress"
    }
  ]
}
